<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.software.eric.coolweather">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <meta-data
        android:name="android.max_aspect"
        android:value="2.1" />


    <application
            android:name=".util.MyApplication"
            android:allowBackup="true"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
        android:resizeableActivity="false"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".mvc.CanaryActivity">
        </activity>
        <activity android:name=".mvc.choosearea.ChooseAreaActivity"/>

        <service android:name=".service.UpdateWeatherInfoService"/>

        <activity android:name=".mvc.weather.WeatherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".mvc.setting.SettingsActivity"
                android:label="@string/title_activity_settings"/>
    </application>

</manifest>